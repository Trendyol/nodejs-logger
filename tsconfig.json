{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es5", "es2017"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listEmittedFiles": true,
    "types": ["node"],
    "typeRoots": ["src/types/**"]
  },
  "exclude": ["*/**/node_modules", "*/**/test", "!node_modules/@types"],
  "include": ["./src"],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true
}
